{
  "name": "issuator",
  "version": "0.0.0",
  "description": "Portal for managing project issues",
  "engines": {
    "node": "12.x",
    "npm": "6.x"
  },
  "main": "dist/src/index.js",
  "scripts": {
    "dev": "nodemon -r ts-node/register -r dotenv/config ./src dotenv_config_path=./environments/.env",
    "dev:debug": "nodemon --inspect-brk -r ts-node/register -r dotenv/config ./src/index.ts dotenv_config_path=./environments/.env",
    "prod": "node -r dotenv/config --optimize_for_size --max_old_space_size=460 --gc_interval=100 ./dist/src dotenv_config_path=./environments/.env.production",
    "clean:dist": "rimraf dist/**/*",
    "compile": "tsc",
    "build": "npm run clean:dist && npm run compile",
    "start": "node --optimize_for_size --max_old_space_size=460 --gc_interval=100 ./dist/src",
    "test:frontend": "cd frontend && node ./node_modules/@angular/cli/bin/ng test && cd ../",
    "test:backend": "SET DOTENV_CONFIG_PATH=./environments/.env.testing&& node -r dotenv/config ./node_modules/jest/bin/jest",
    "coveralls": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "test:local": "npm run test:backend && npm run test:frontend",
    "test": "npm run coveralls && npm run test:frontend",
    "lint:frontend": "cd frontend && node ./node_modules/@angular/cli/bin/ng lint && cd ../",
    "lint:backend": "tslint -p ./tsconfig.json -c ./tslint.json",
    "lint": "npm run lint:backend && npm run lint:frontend"
  },
  "pre-commit": "lint",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fantkolja/issuator.git"
  },
  "keywords": [
    "project management",
    "issue"
  ],
  "author": "Mykola Fant",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fantkolja/issuator/issues"
  },
  "homepage": "https://github.com/fantkolja/issuator#readme",
  "devDependencies": {
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.13",
    "@types/mongoose": "^5.5.6",
    "@types/node": "^12.0.4",
    "@types/supertest": "^2.0.7",
    "codelyzer": "^5.0.0",
    "coveralls": "^3.0.4",
    "dotenv": "^8.0.0",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "pre-commit": "^1.2.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.2.0",
    "tslint": "^5.17.0",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.5.1"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "express": "^4.17.1",
    "mongoose": "^5.6.1"
  }
}
